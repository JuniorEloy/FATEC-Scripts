<%- include ('partials/header.ejs') %> <%- include ('partials/navbar.ejs') %>
<div class="container p-4">
  <div class="card" id="formulario-pergunta">
    <div class="card-header">
      <h3>Cadastro de Pergunta</h3>
    </div>
    <div class="card-body">
      <form id="perguntaForm">
        <!-- <form id="perguntaForm" method="POST" action="/salvarpergunta"> -->
        <label for="txttitulo">Título</label>
        <input
          type="text"
          placeholder="Título"
          class="form-control"
          name="titulo"
          id="txttitulo"
        />
        <br />
        <label for="txtpergunta">Descrição</label>
        <textarea
          id="txtpergunta"
          placeholder="Descreva sua pergunta aqui"
          class="form-control"
          name="descricao"
        ></textarea
        ><br />
        <button class="btn btn-primary">Perguntar</button>
      </form>
    </div>
  </div>
</div>
<script src="/js/pergunta.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

